@model ProcessingService.RetrieveLogic.BookQueryParameters
    
<form method="get" class="mb-3">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label>Назва:</label>
                <input type="text" asp-for="Title" class="form-control" />
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label>Рейтинг:</label>
                <div class="row">
                    <div class="col-md-6">
                        <input type="number" asp-for="MinRating" class="form-control" placeholder="Min Rating" step="0.1" min="0" max="5" />
                    </div>
                    <div class="col-md-6">
                        <input type="number" asp-for="MaxRating" class="form-control" placeholder="Max Rating" step="0.1" min="0" max="5" />
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label>Ціна:</label>
                <div class="row">
                    <div class="col-md-6">
                        <input type="number" asp-for="MinPrice" class="form-control" placeholder="Min Price" />
                    </div>
                    <div class="col-md-6">
                        <input type="number" asp-for="MaxPrice" class="form-control" placeholder="Max Price" />
                    </div>
                </div>
            </div>
        </div>
    </div>
        

    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label>За автором:</label>
                <input type="text" asp-for="Author" class="form-control" />
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label>За сервісом:</label>
                <input type="text" asp-for="Domain" class="form-control" />
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label>Дата публікації:</label>
                <div class="row">
                    <div class="col-md-6">
                        <input type="date" asp-for="MinPublishDate" class="form-control" placeholder="Min Publish Date" />
                    </div>
                    <div class="col-md-6">
                        <input type="date" asp-for="MaxPublishDate" class="form-control" placeholder="Max Publish Date" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label>Останнє оновлення:</label>
                <div class="row">
                    <div class="col-md-6">
                        <input type="date" asp-for="MinRetrievedDate" class="form-control" placeholder="Min Retrieved Date" />
                    </div>
                    <div class="col-md-6">
                        <input type="date" asp-for="MaxRetrievedDate" class="form-control" placeholder="Max Retrieved Date" />
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 align-items-center justify-content-center">
            <label></label>
            <div class="form-group">
                <div class="form-check">
                    <input type="checkbox" asp-for="WithSeveralLinks" class="form-check-input" />
                    <label class="form-check-label">Має кілька посилань</label>
                </div>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input type="checkbox" asp-for="WithDiscount" class="form-check-input" />
                    <label class="form-check-label">Має знижку</label>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label style="width: 100%">Сторінка:</label>
                <div class="btn-group">
                    <button type="button" class="btn btn-secondary" onclick="decreasePageNumber()">&#9668;</button>
                    <input type="number" asp-for="PageNumber" class="form-control" id="pageNumberInput" onchange="updatePageNumber()" />
                    <button type="button" class="btn btn-secondary" onclick="increasePageNumber()">&#9658;</button>
                </div>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Знайти</button>
</form>

<script>
    function decreasePageNumber() {
        var pageNumberInput = document.querySelector("#pageNumberInput");
        var currentPageNumber = parseInt(pageNumberInput.value);
        pageNumberInput.value = currentPageNumber > 1 ? currentPageNumber - 1 : 1;
    }

    function increasePageNumber() {
        var pageNumberInput = document.querySelector("#pageNumberInput");
        var currentPageNumber = parseInt(pageNumberInput.value);
        pageNumberInput.value = currentPageNumber + 1;
    }

    function updatePageNumber() {
        var pageNumberInput = document.querySelector("#pageNumberInput");
        var currentPageNumber = parseInt(pageNumberInput.value);
        pageNumberInput.value = currentPageNumber > 1 ? currentPageNumber : 1;
    }
</script>
